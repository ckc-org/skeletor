{
  "engines": {
    "node": "18.x",
    "npm": "9.x || 10.x"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "reset": "rm -rf .nuxt node_modules .output package-lock.json && npm install",
    "test": "cypress install && xvfb-run -a npx cypress run",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "heroku-postbuild": "cd src/frontend && nuxi generate",
    "lint": "eslint . --ext .js,.vue,.ts --ignore-path .gitignore",
    "format": "prettier .  --write",
    "format-specific": "./bin/linting/format_frontend.sh",
    "lint-specific": "./bin/linting/lint_frontend.sh"
  },
  "devDependencies": {
    "@iconify/vue": "^4.1.1",
    "@nuxtjs/google-fonts": "^3.1.3",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vueuse/core": "^10.7.1",
    "@vueuse/nuxt": "^10.7.1",
    "cypress": "^13.6.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.19.2",
    "nuxt": "^3.9.1",
    "prettier": "3.1.1",
    "sass": "^1.69.7",
    "stylus": "^0.62.0",
    "stylus-loader": "^7.1.3",
    "vuetify": "^3.4.9",
    "vuetify-nuxt-module": "^0.8.0"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.5.1",
